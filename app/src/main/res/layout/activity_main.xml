<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/admin_page_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="-115dp"
            android:layout_width="171dp"
            android:layout_height="144dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/hero_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="-10dp"
            android:text="StaffLink"
            android:textStyle="bold"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Your Employee Attendance App"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="-5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="-60dp"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/companyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="For Company"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="35dp"
                app:backgroundTint="@color/darkgreen"
                android:background="@drawable/button_design" />

            <Button
                android:id="@+id/employeeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/darkgreen"
                android:text="For Employees"
                android:background="@drawable/button_design"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>