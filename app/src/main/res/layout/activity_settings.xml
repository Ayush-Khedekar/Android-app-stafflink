<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_page_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- ================= HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="14dp"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_black"
                android:backgroundTint="#1F2937" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="12dp"
                android:textColor="#111827" />
        </LinearLayout>


        <!-- ================= PROFILE SETTINGS TITLE ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

        <!-- ================= PROFILE FORM CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Admin Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Name"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/etAdminName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Admin Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etAdminEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etAdminPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Phone Number"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Company Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Company Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Company Code -->
<!--                                <TextView-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="Company Code"-->
<!--                                    android:textSize="14sp"-->
<!--                                    android:textColor="#1F2937"-->
<!--                                    android:fontFamily="@font/poppins"-->
<!--                                    android:layout_marginTop="12dp"/>-->

<!--                                <EditText-->
<!--                                    android:id="@+id/etCompanyCode"-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="48dp"-->
<!--                                    android:background="@drawable/edittext_line_background"-->
<!--                                    android:padding="12dp"-->
<!--                                    android:hint="Enter Company Code"-->
<!--                                    android:textSize="14sp"-->
<!--                                    android:fontFamily="@font/poppins"/>-->

                <!-- Industry -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industry"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Industry"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Location"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <!-- Departments -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departments"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etDepartments"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Enter Departments (comma separated)"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add new Departments"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etNewDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_line_background"
                    android:padding="12dp"
                    android:hint="Add New Department"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"/>

                <Button
                    android:id="@+id/btnAddDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Add Department"
                    android:backgroundTint="#6c5ce7"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>





        <!-- ================= APP META / FEATURES TITLE ================= -->
        <TextView
            android:text="App Features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#111827"
            android:textStyle="bold"
            android:layout_marginTop="28dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="18dp"
            android:layout_marginTop="12dp"
            android:padding="14dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- ================= SETTINGS ================= -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:textColor="#1F2937"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Attendance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:text="Attendance Enabled"
                        android:textSize="17sp"
                        android:textColor="#1F2937"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchAttendanceSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB" />

                <!-- Departments -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:text="Departments Enabled"
                        android:textSize="17sp"
                        android:textColor="#1F2937"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchDepartmentsSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB" />

                <!-- Leave -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:text="Leave Enabled"
                        android:textSize="17sp"
                        android:textColor="#1F2937"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchLeaveSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB" />

                <!-- Overtime -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:text="Overtime Enabled"
                        android:textSize="17sp"
                        android:textColor="#1F2937"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/poppins"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchOvertimeSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB" />

                <!-- Payroll -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:text="Payroll Enabled"
                        android:textSize="17sp"
                        android:textColor="#1F2937"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:fontFamily="@font/poppins"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchPayrollSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB" />

                <!-- ================= APP FEATURES ================= -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Features"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:textColor="#1F2937"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Features rows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Attendance"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/switchAttendanceFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Department Tracking"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/departmentTrackingFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Leave Management"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/leaveManagementFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Multi Company"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/multiCompanyFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Overtime"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/overtimeFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:text="Payroll"
                            android:textSize="17sp"
                            android:textColor="#1F2937"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Switch
                            android:id="@+id/payrollFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Edit Settings"
                        android:backgroundTint="#6c5ce7"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Save Settings"
                        android:backgroundTint="#0984E3"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="24dp"/>

                    <!-- Repeat similar layout for Leave Management, Multi-Company, Overtime, Payroll -->
                    <!-- ... -->

                    <!-- App Version -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Version: 1.0.0"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#6B7280"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
