<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Header: Back + Title + Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_back_black"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Admin Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:fontFamily="@font/poppins"/>

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/logout"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Avatar -->
        <TextView
            android:id="@+id/tvDetailInitial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="A"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:background="@drawable/circle_avatar_bg"
            android:elevation="6dp"/>

        <!-- Personal Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:layout_marginTop="26dp"
            android:layout_margin="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@company.com"
                    android:textSize="15sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 9876543210"
                    android:textSize="15sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"/>

                <TextView
                    android:id="@+id/tvDetailPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="14sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="14sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailJoinedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joined Date: DD/MM/YYYY"
                    android:textSize="14sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Salary Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:layout_marginTop="16dp"
            android:layout_margin="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:id="@+id/tvDetailBaseSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base Salary: ₹0"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailFinalSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final Salary: ₹0"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailDeductions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deductions: ₹0"
                    android:textSize="16sp"
                    android:textColor="#EF4444"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailOvertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overtime: ₹0"
                    android:textSize="16sp"
                    android:textColor="#10B981"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Leaves Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:layout_marginTop="16dp"
            android:layout_margin="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:id="@+id/tvDetailHalfDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half Days Used: 0"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailFullDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Days Used: 0"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/tvDetailPaidLeaves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid Leaves Used: 0"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
