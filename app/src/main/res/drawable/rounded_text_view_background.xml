<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color: Material design me default TextInputEditText ka background white hota hai -->
    <solid android:color="@android:color/white" />

    <!-- Border Color and Width (Optional, but gives the field look) -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Corner Radius (10dp jo apne original code me use kiya tha) -->
    <corners
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />
</shape>